{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Saleor (Gunicorn)",
            "type": "python",
            "request": "launch",
            "module": "gunicorn",
            "args": [
                "--bind",
                ":8000",
                "--config",
                "gunicorn_config.py",
                "--workers",
                "4",
                "--worker-class",
                "saleor.asgi.gunicorn_worker.UvicornWorker",
                "--reload",
                "saleor.asgi:application"
            ]
        }
    ]
}